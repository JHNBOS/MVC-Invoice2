@model InvoiceWebApp.Models.Admin

@{
    ViewData["Title"] = "Remove Administrator";
}

<div class="container" id="remove-admin">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Remove Administrator</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m10 offset-m1 col l10 offset-l1">
            <form asp-controller="Admins" asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" asp-for="AdminID" />

                <fieldset>
                    <legend>Personal Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="FirstName" disabled>
                            <label for="icon_prefix">First Name</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="LastName" disabled>
                            <label for="icon_prefix">Last Name</label>
                        </div>
                    </div>
                </fieldset>

                <br />

                <fieldset>
                    <legend>Login</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_prefix" type="email" asp-for="Email" class="validate" disabled>
                            <label for="icon_prefix">Email</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">lock</i>
                            <input id="icon_prefix" type="password" asp-for="Password" class="validate" disabled>
                            <label for="icon_prefix">Password</label>
                        </div>
                    </div>
                </fieldset>

                <div class="divider" style="background-color: #cecece;"></div>

                <div class="row">
                    <div id="button-area">
                        <button id="remove-admin-btn" type="submit" value="Remove"
                                class="btn-large indigo darken-1 waves-effect waves-light">
                            <i class="material-icons left">delete</i>
                            <span>Remove</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="indigo-text text-darken-1">Back to Overview</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>