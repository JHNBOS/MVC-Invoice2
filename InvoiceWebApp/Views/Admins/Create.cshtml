@using static InvoiceWebApp.Models.AppSettings
@model InvoiceWebApp.Models.Admin

@{
    ViewData["Title"] = "Create Administrator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="create-admin">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Create Administrator</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m10 offset-m1 col l10 offset-l1">
            <form asp-controller="Admins" asp-action="Create">

                <fieldset>
                    <legend>Personal Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="FirstName">
                            <label for="icon_prefix">First Name</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="LastName">
                            <label for="icon_prefix">Last Name</label>
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Login</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_prefix" type="email" asp-for="Email" class="validate">
                            <label for="icon_prefix">Email</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">lock</i>
                            <input id="icon_prefix" type="password" asp-for="Password" class="validate">
                            <label for="icon_prefix">Password</label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="create-admin-btn" type="submit" value="Create"
                                class="btn-large light-green waves-effect waves-light">
                            <i class="material-icons left">create</i>
                            <span>Create</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="light-green-text">Back to Overview</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>