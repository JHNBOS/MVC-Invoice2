@using System.Diagnostics
@using InvoiceWebApp.Data
@model InvoiceWebApp.Models.Admin
@inject ApplicationDbContext _context

@{
    ViewData["Title"] = "Manage Administrator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="edit-admin">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 0px;">Manage Administrator</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m10 offset-m1 col l10 offset-l1">
            <form asp-controller="Admins" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AdminID" />

                <fieldset>
                    <legend>Personal Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="FirstName">
                            <label for="icon_prefix">First Name</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="LastName">
                            <label for="icon_prefix">Last Name</label>
                        </div>
                    </div>
                </fieldset>

                <br />

                <fieldset>
                    <legend>Login</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_prefix" type="email" asp-for="Email" class="validate">
                            <label for="icon_prefix" data-error="This email address is not valid."
							   data-success="This email address is valid.">Email</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">lock</i>
                            <input id="icon_prefix" type="password" asp-for="Password">
                            <label for="icon_prefix">Password</label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="edit-admin-btn" type="submit" value="Save"
                                class="btn-large indigo darken-1 waves-effect waves-light">
                            <i class="material-icons left">save</i>
                            <span>Save</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="indigo-text text-darken-1">Back to Overview</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}