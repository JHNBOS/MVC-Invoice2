@using static InvoiceWebApp.Models.AppSettings
@model InvoiceWebApp.Models.Admin

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";

    AppSettings settings = null;
    if (SessionHelper.IsExists(Context.Session, "Settings"))
    {
        settings = SessionHelper.Get<AppSettings>(Context.Session, "Settings");
    }
}

<div>
    <div class="section center-align" style="font-family:Roboto, sans-serif;">
        <h4>Forgot Password</h4>
        <h5 style="font-weight: 300;">Admin</h5>
    </div>

    <div id="forgot-row" class="row">
        <div class="col s12 col m12 ">
            <form id="forgot-form" asp-controller="Admins" asp-action="ForgotPassword">

                <!--Email-->
                <div class="row">
                    <div class="input-field col s12 col m12">
                        <input asp-for="Email" id="email" type="email" class="validate grey-text text-darken-3">
                        <label class="grey-text text-darken-3" for="email">Email</label>
                    </div>
                </div>

                <!--Password-->
                <div class="row">
                    <div class="input-field col s12 col m12">
                        <input asp-for="Password" id="password" type="password" class="validate grey-text text-darken-3">
                        <label class="grey-text text-darken-3" for="password">New Password</label>
                    </div>
                </div>

                <!--Button-->
                <div class="row">
                    <button id="forgot-button" type="submit"
                            class="btn z-depth-2 light-green accent-4 right white-text wave-effect wave-green">
                        CHANGE
                    </button>
                </div>
            </form>
        </div>
    </div>

    <br />

    <div class="divider">
    </div>

    <br />

    <div class="row right">
        <div id="forgot-links">
            <a asp-controller="Admins" asp-action="Login" style="font-weight:bold;" class="light-green-text text-darken-1">Back to Login</a>
        </div>
    </div>

    <br />
    <br />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}