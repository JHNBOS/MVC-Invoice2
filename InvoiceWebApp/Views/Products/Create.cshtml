@model InvoiceWebApp.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container">
    <div class="row main">
        <div class="panel-heading">
            <div class="panel-title text-center">
                <h1 class="title">Create Product</h1>
                <hr style="width:60%;border-top:2px solid #fff;" />
            </div>
        </div>

        <div class="main-large main-center">
            <form id="form" class="form-horizontal" asp-controller="Products" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-sm-3 col-md-3"></div>
                    <div class="col-sm-8 col-md-8">
                        <!--NAME-->
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-industry fa-lg" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" asp-for="Name" class="form-control" id="name"                                placeholder="Enter product name" />
                                </div>
                            </div>
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>

                        <!--DESCRIPTION-->
                        <div class="form-group">
                            <label asp-for="Description" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-industry fa-lg" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" asp-for="Description" class="form-control" id="description"                  placeholder="Enter product description" />
                                </div>
                            </div>
                            <span asp-validation-for="Description" class="text-danger" />
                        </div>

                        <!--PRICE-->
                        <div class="form-group">
                            <label asp-for="Price" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon" style="padding-right: 22.5px;padding-left: 22.5px;">
                                        <i class="fa fa-eur fa-lg" aria-hidden="true"></i>
                                    </span>
                                    <input class="form-control" type="text" name="price" id="price" 
                                           placeholder="Enter price" />
                                </div>
                            </div>
                            <span asp-validation-for="Price" class="text-danger" />
                        </div>

                        <!--VAT PERCENTAGE-->
                        <div class="form-group">
                            <label asp-for="VAT" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon" style="padding-left:19px;padding-right:19px;">
                                        <i class="fa fa-percent fa-lg" aria-hidden="true"></i>
                                    </span>
                                    <input class="form-control" type="text" name="vat" id="vat" 
                                           placeholder="Enter VAT percentage" />
                                </div>
                            </div>
                            <span asp-validation-for="VAT" class="text-danger" />
                        </div>

                        <!--CREATE BUTTON-->
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input id="create_prod_btn" type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-1 col-md-1"></div>
                </div>

                <a asp-action="Index">Back to Overview</a>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#create_prod_btn").on("click", function () {
            var price = $("#price").val();
            $("#form").attr("asp-route-price", price);
        })
    </script>
}