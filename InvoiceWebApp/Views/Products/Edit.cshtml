@model InvoiceWebApp.Models.Product

@{
    ViewData["Title"] = "Manage Product";
}

<div class="container" id="edit-product">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Manage Product</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col col m10 offset-m1">
            <form asp-controller="Products" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductID" />

                <fieldset>
                    <legend>Product Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m8 offset-m3">
                            <i class="material-icons prefix">motorcycle</i>
                            <input id="icon_prefix" type="text" asp-for="Name" />
                            <label for="icon_prefix">Product Name</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m8 offset-m3">
                            <i class="material-icons prefix">border_color</i>
                            <input id="icon_prefix" type="text" asp-for="Description" />
                            <label for="icon_prefix">Description</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m8 offset-m3">
                            <i class="material-icons prefix">euro_symbol</i>
                            <input id="icon_prefix price" type="text" name="price" asp-for="Price" />
                            <label for="icon_prefix">Price</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m8 offset-m3">
                            <i class="material-icons prefix">exposure_plus_2</i>
                            <input id="icon_prefix" type="text" name="vat" asp-for="VAT" />
                            <label for="icon_prefix">VAT Percentage</label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="edit-product-btn" type="submit" value="Save"
                                class="btn-large light-green waves-effect waves-light">
                            <i class="material-icons left">save</i>
                            <span>Save</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="light-green-text">Back to Overview</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            var price = "@(ViewBag.Price)";
            $("#price").val(price);

            var vat = "@(ViewBag.VAT)";
            $("#vat").val(vat);
        });

        $("edit-product-btn").on("click", function () {
            var price = $("#price").val();
            $("#form").attr("asp-route-price", price);
        })
    </script>
}