@model InvoiceWebApp.Models.Company

@{
    ViewData["Title"] = "Company Details";
}

<div class="container" id="details-company">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Company Details</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m10 offset-m1">
            <form>

                <fieldset>
                    <legend>Company Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">business</i>
                            <input id="icon_prefix" type="text" asp-for="CompanyName" disabled />
                            <label for="icon_prefix">Company Name</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">markunread_mailbox</i>
                            <input id="icon_prefix" type="text" asp-for="RegNumber" disabled />
                            <label for="icon_prefix">Registration Number</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_prefix" type="email" asp-for="Email" class="validate" disabled />
                            <label for="icon_prefix">Email</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">phone</i>
                            <input id="icon_prefix" type="text" asp-for="Phone" disabled />
                            <label for="icon_prefix">Phone</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">credit_card</i>
                            <input id="icon_prefix" type="text" asp-for="BankAccount" disabled />
                            <label for="icon_prefix">Bank Account No</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">account_balance</i>
                            <input id="icon_prefix" type="text" asp-for="BankName" disabled />
                            <label for="icon_prefix">Name of Bank</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">card_membership</i>
                            <input id="icon_prefix" type="text" asp-for="FinancialNumber" disabled />
                            <label for="icon_prefix">Financial No</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">card_membership</i>
                            <input id="icon_prefix" type="text" asp-for="EUFinancialNumber" disabled />
                            <label for="icon_prefix">EU Financial No</label>
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Address</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="Address" disabled />
                            <label for="icon_prefix">Address</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="PostalCode" disabled />
                            <label for="icon_prefix">Postal Code</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="City" disabled />
                            <label for="icon_prefix">City</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="Country" disabled />
                            <label for="icon_prefix">Country</label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="change-company-btn" type="submit" value="Edit"
                                class="btn-large light-green waves-effect waves-light"
                                asp-controller="Companies" asp-action="Edit" asp-route-id="@Model.CompanyID">
                            <i class="material-icons left">edit</i>
                            <span>Edit</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="light-green-text">Back to Overview</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}