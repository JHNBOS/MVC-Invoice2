@model InvoiceWebApp.Models.Debtor

@{
    ViewData["Title"] = "Edit Debtor";
}

<div class="container grey lighten-4" id="edit-debtor">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Edit Debtor</h4>
        </div>
    </div>

    <div class="row" style="padding-left: 75px;">
        <div class="col s12 col m12">
            <form class="col s12 col m12" asp-controller="Debtors" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DebtorID" />

                <div class="row">
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">perm_identity</i>
                        <input id="icon_prefix" type="text" asp-for="IdNumber" class="validate">
                        <label for="icon_prefix">Personal ID Number</label>
                    </div>
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="Address" class="validate">
                        <label for="icon_prefix">Address</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">person_outline</i>
                        <input id="icon_prefix" type="text" asp-for="FirstName" class="validate">
                        <label for="icon_prefix">First Name</label>
                    </div>
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="PostalCode" class="validate">
                        <label for="icon_prefix">Postal Code</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">person_outline</i>
                        <input id="icon_prefix" type="text" asp-for="LastName" class="validate">
                        <label for="icon_prefix">Last Name</label>
                    </div>
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="City" class="validate">
                        <label for="icon_prefix">City</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">email</i>
                        <input id="icon_prefix" type="email" asp-for="Email" class="validate">
                        <label for="icon_prefix">Email</label>
                    </div>
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="Country" class="validate">
                        <label for="icon_prefix">Country</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">phone</i>
                        <input id="icon_prefix" type="text" asp-for="Phone" class="validate">
                        <label for="icon_prefix">Phone</label>
                    </div>
                    <div class="input-field col s6 col m6">
                        <i class="material-icons prefix">credit_card</i>
                        <input id="icon_prefix" type="text" asp-for="BankAccount" class="validate">
                        <label for="icon_prefix">Bank Account No</label>
                    </div>
                </div>

                <div class="divider" style="background-color: #cecece;"></div>

                <div class="row">
                    <button id="edit-debtor-btn" type="submit" value="Save" class="btn btn-large center-align z-depth-3 waves-effect waves-light light-green">
                        <i class="material-icons left">save</i>
                        <span>Save</span>
                    </button>

                    <br />

                    <a asp-action="Index" class="light-green-text text-darken-1 center-align">Back to Overview</a>
                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}