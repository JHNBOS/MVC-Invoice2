@model InvoiceWebApp.Models.Debtor

@{
    ViewData["Title"] = "Manage Debtor";
}

@section HEAD {
	<link rel="stylesheet" href="~/css/debtor.css" />
}

<div class="container" id="edit-debtor">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 0px;">Manage Debtor</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m12 col l10 offset-l1">
            <form asp-controller="Debtors" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DebtorID" />

                <fieldset>
                    <legend>Personal Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">perm_identity</i>
                            <input id="icon_id" type="text" asp-for="IdNumber" />
                            <label for="icon_id">Personal ID Number</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">credit_card</i>
                            <input id="icon_bank" type="text" asp-for="BankAccount" />
                            <label for="icon_bank">Bank Account No</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_first" type="text" asp-for="FirstName" />
                            <label for="icon_first">First Name</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_last" type="text" asp-for="LastName" />
                            <label for="icon_last">Last Name</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_email" type="email" asp-for="Email" class="validate" />
                            <label for="icon_email" data-error="This email address is not valid."
							   data-success="This email address is valid.">Email</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">phone</i>
                            <input id="icon_phone" type="text" asp-for="Phone" />
                            <label for="icon_phone">Phone</label>
                        </div>
                    </div>
                </fieldset>

                <br />

                <fieldset>
                    <legend>Address</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_address" type="text" asp-for="Address" />
                            <label for="icon_address">Address</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_postal" type="text" asp-for="PostalCode" />
                            <label for="icon_postal">Postal Code</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_city" type="text" asp-for="City" />
                            <label for="icon_city">City</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_country" type="text" asp-for="Country" />
                            <label for="icon_country">Country</label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="edit-debtor-btn" type="submit" value="Save"
                                class="btn-large indigo darken-1 waves-effect waves-light">
                            <i class="material-icons left">save</i>
                            <span>Save</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="indigo-text text-darken-1">Back to Overview</a>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}