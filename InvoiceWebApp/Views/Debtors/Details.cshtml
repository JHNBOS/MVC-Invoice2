@model InvoiceWebApp.Models.Debtor

@{
    ViewData["Title"] = "Debtor Details";
}

<div class="container" id="details-debtor">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Debtor Details</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m12 col l10 offset-l1">
            <form>

                <fieldset>
                    <legend>Personal Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">perm_identity</i>
                            <input id="icon_id" type="text" asp-for="IdNumber" disabled />
                            <label for="icon_id">Personal ID Number</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">credit_card</i>
                            <input id="icon_bank" type="text" asp-for="BankAccount" disabled />
                            <label for="icon_bank">Bank Account No</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_first" type="text" asp-for="FirstName" disabled />
                            <label for="icon_first">First Name</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_last" type="text" asp-for="LastName" disabled />
                            <label for="icon_last">Last Name</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_email" type="email" asp-for="Email" class="validate" disabled />
                            <label for="icon_email">Email</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">phone</i>
                            <input id="icon_phone" type="text" asp-for="Phone" disabled />
                            <label for="icon_phone">Phone</label>
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Address</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_address" type="text" asp-for="Address" disabled />
                            <label for="icon_address">Address</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_postal" type="text" asp-for="PostalCode" disabled />
                            <label for="icon_postal">Postal Code</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_city" type="text" asp-for="City" disabled />
                            <label for="icon_city">City</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_country" type="text" asp-for="Country" disabled />
                            <label for="icon_country">Country</label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="change-debtor-btn" type="submit" value="Edit"
                                class="btn-large light-green waves-effect waves-light"
                                asp-controller="Debtors" asp-action="Edit" asp-route-id="@Model.DebtorID">
                            <i class="material-icons left">edit</i>
                            <span>Edit</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="light-green-text">Back to Overview</a>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}