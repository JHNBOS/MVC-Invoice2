@model InvoiceWebApp.Models.Debtor

@{
    ViewData["Title"] = "Remove Debtor";
}

<div class="container" id="remove-debtor">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Remove Debtor</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m12 col l10 offset-l1">
            <form asp-controller="Debtors" asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this debtor and all his invoices?');">
                <input type="hidden" asp-for="DebtorID" />

                <fieldset>
                    <legend>Personal Information</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">perm_identity</i>
                            <input id="icon_prefix" type="text" asp-for="IdNumber" disabled />
                            <label for="icon_prefix">Personal ID Number</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">credit_card</i>
                            <input id="icon_prefix" type="text" asp-for="BankAccount" disabled />
                            <label for="icon_prefix">Bank Account No</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="FirstName" disabled />
                            <label for="icon_prefix">First Name</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">person_outline</i>
                            <input id="icon_prefix" type="text" asp-for="LastName" disabled />
                            <label for="icon_prefix">Last Name</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_prefix" type="email" asp-for="Email" class="validate" disabled />
                            <label for="icon_prefix">Email</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">phone</i>
                            <input id="icon_prefix" type="text" asp-for="Phone" disabled />
                            <label for="icon_prefix">Phone</label>
                        </div>
                    </div>

                </fieldset>

                <fieldset>
                    <legend>Address</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="Address" disabled />
                            <label for="icon_prefix">Address</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="PostalCode" disabled />
                            <label for="icon_prefix">Postal Code</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="City" disabled />
                            <label for="icon_prefix">City</label>
                        </div>
                        <div class="input-field col s12 col m12 col l6">
                            <i class="material-icons prefix">place</i>
                            <input id="icon_prefix" type="text" asp-for="Country" disabled />
                            <label for="icon_prefix">Country</label>
                        </div>
                    </div>
                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="change-debtor-btn" type="submit" value="Remove"
                                class="btn-large light-green waves-effect waves-light">
                            <i class="material-icons left">delete</i>
                            <span>Remove</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="light-green-text">Back to Overview</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}