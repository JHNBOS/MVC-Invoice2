@model IEnumerable<InvoiceWebApp.Models.Debtor>

@{
    ViewData["Title"] = "Debtors";
}

<div class="container grey lighten-4" id="debtor-index">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Debtors</h4>
        </div>
    </div>

    <div class="row">
        <div class="col s12 col m12">
            <p>
                @using (Html.BeginForm()) {
                    <br />

                    <div class="row valign-wrapper">
                        <div class="col s10 col m10 valign"> 
                            <div class="form-inline">
                                <div class="input-field">
                                    @Html.TextBox("searchQuery", null, htmlAttributes: new {
                                    @class = "input-field inline",
                                    @placeholder = "Find...",
                                    @style = "margin-right: 15px;" })

                                    <button type="submit" value="Search" class="waves-effect waves-light btn amber tooltipped"
                                            data-position="top" data-delay="50" data-tooltip="Search for Debtor"
                                            style="height: 40px;line-height: 40px;">
                                        <i class="material-icons">search</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col s2 col m2 valign">
                            <a asp-action="Create" value="Create Debtor" class="waves-effect waves-light btn btn-large amber tooltipped"
                               data-position="top" data-delay="50" data-tooltip="Create Debtor" style="float: right;margin-top: 6px;">
                                <i class="material-icons">add_box</i>
                            </a>
                        </div>
                    </div>
                }
            </p>

            <div class="divider" style="background-color:#c2c2c2;margin-bottom:35px;"></div>

            <table class="responsive-table borderd highlight">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdNumber)
                        </th>
                        <th>
                            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LastNameSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.FirstNameSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParm })
                        </th>
                        <th>
                            @Html.ActionLink("City", "Index", new { sortOrder = ViewBag.CitySortParm })
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdNumber)
                            </td>
                            <td>
                                <a class="tooltipped" asp-action="Details" asp-route-id="@item.DebtorID"
                                   data-position="top" data-delay="50" data-tooltip="View Details">
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </a>
                            </td>
                            <td>
                                <a class="tooltipped" asp-action="Details" asp-route-id="@item.DebtorID"
                                   data-position="top" data-delay="50" data-tooltip="View Details">
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                <a class="tooltipped" asp-action="Edit" asp-route-id="@item.DebtorID"
                                   data-position="top" data-delay="50" data-tooltip="Edit Debtor"
                                   style="padding-right: 2px;">
                                    <i class="material-icons green-text">edit</i>
                                </a>
                                <a class="tooltipped" asp-action="Delete" asp-route-id="@item.DebtorID"
                                   data-position="right" data-delay="50" data-tooltip="Remove Debtor"
                                   style="padding-left: 2px;">
                                    <i class="material-icons red-text">delete</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.tooltipped').tooltip({ delay: 50 });
        });
    </script>
}