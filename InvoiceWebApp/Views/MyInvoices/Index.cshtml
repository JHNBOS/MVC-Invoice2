@model IEnumerable<InvoiceWebApp.Models.Invoice>

@{
    ViewData["Title"] = "Invoices";
}


<div class="container" id="myinvoice-index">
    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Invoices</h4>
        </div>
    </div>

    <br />

    <!--Top Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m12">
            @using (Html.BeginForm()) {
                <!--Spacer-->
            <div class="col s2 col m2"></div>

                <!--Input-->
            <div class="input-field col s12 col m4 right-align">
                <input id="searchQuery" type="text" placeholder="Search..." style="max-width: 300px;">
            </div>

                <!--Buttons-->
            <div class="input-field col s12 col m4 center-align">
                <button id="search-myinvoice-btn" type="submit" value="Search"
                        class="btn-large amber tooltipped waves-effect waves-light"
                        data-position="top" data-delay="50" data-tooltip="Search for Invoices">
                    <i class="material-icons">search</i>
                </button>
            </div>

                <!--Spacer-->
            <div class="col s2 col m2"></div>
            }
        </div>
    </div>

    <div class="divider" style="background-color:#c2c2c2;margin-bottom:35px;"></div>

    <div class="row">
        <div class="col s12 col m12">
            <table class="responsive-table bordered highlight">
                <thead>
                    <tr>
                        <th>
                            @Html.ActionLink("Invoice Number", "Index", new { sortOrder = ViewBag.NumberSortParm })
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpirationDate)
                        </th>
                        <td>
                            @Html.Raw("<b>Paid</b>")
                        </td>
                        <th>
                            @Html.ActionLink("Total", "Index", new { sortOrder = ViewBag.TotalSortParm })
                        </th>
                        <th>
                            @Html.Raw("Download")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.InvoiceNumber">
                                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpirationDate)
                            </td>
                            <td>
                                @if (item.Paid == true) {
                                    @Html.Raw("Yes")
                                } else {
                                    @Html.Raw("No")
                                }
                            </td>
                            <td>
                                @Html.Raw(String.Format("{0:C2}", item.Total))
                            </td>
                            <td>
                                <a asp-action="DownloadPDF" asp-route-id="@item.InvoiceNumber">Download PDF</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>


</div>
