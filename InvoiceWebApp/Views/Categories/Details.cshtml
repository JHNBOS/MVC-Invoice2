@model InvoiceWebApp.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container" id="details-category">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Category Details</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m12 col l10 offset-l1">
            <form>

                <fieldset>
                    <legend>Category</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l8 offset-l2">
                            <i class="material-icons prefix">label</i>
                            <input id="icon_name" type="text" asp-for="CategoryName" disabled />
                            <label for="icon_name">Category</label>
                        </div>
                    </div>

                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="change-category-btn" type="submit" value="Edit"
                                class="btn-large indigo darken-1 waves-effect waves-light"
                                asp-action="Edit" asp-route-id="@Model.CategoryID">
                            <i class="material-icons left">edit</i>
                            <span>Edit</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="indigo-text text-darken-1">Back to Overview</a>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>