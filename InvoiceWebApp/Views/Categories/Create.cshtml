@model InvoiceWebApp.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container" id="create-category">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 0px;">Create Category</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col m12 col l10 offset-l1">
            <form asp-controller="Categories" asp-action="Create">

                <fieldset>
                    <legend>Category</legend>

                    <div class="row">
                        <div class="input-field col s12 col m12 col l8 offset-l2">
                            <i class="material-icons prefix">label</i>
                            <input id="icon_name" type="text" asp-for="CategoryName" />
                            <label for="icon_name">Category</label>
                        </div>
                    </div>

                </fieldset>

                <div class="row">
                    <div id="button-area">
                        <button id="create-category-btn" type="submit" value="Create"
                                class="btn-large indigo darken-1 waves-effect waves-light">
                            <i class="material-icons left">create</i>
                            <span>Create</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="indigo-text text-darken-1">Back to Overview</a>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>
