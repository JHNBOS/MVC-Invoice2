@using static InvoiceWebApp.Models.AppSettings
@model InvoiceWebApp.Models.User

@{
    ViewData["Title"] = "Register User";
    Layout = "~/Views/Shared/_Layout.cshtml";

    AppSettings settings = null;
    if (SessionHelper.IsExists(Context.Session, "Settings")) {
        settings = SessionHelper.Get<AppSettings>(Context.Session, "Settings");
    }
}

<div class="container" id="create-user">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Create User</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col col m10 offset-m1">
            <form asp-controller="Users" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">person_outline</i>
                        <input id="icon_prefix" type="text" asp-for="FirstName">
                        <label for="icon_prefix">First Name</label>
                    </div>
                    <div class="input-field col s12 col m4">
                        <i class="material-icons prefix">person_outline</i>
                        <input id="icon_prefix" type="text" asp-for="LastName">
                        <label for="icon_prefix">Last Name</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">phone</i>
                        <input id="icon_prefix" type="text" asp-for="Phone">
                        <label for="icon_prefix">Phone</label>
                    </div>
                    <div class="input-field col s12 col m4">
                    </div>
                </div>

                <div class="divider" style="background-color: #cecece;"></div>

                <div class="row">
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">email</i>
                        <input id="icon_prefix" type="email" asp-for="Email" class="validate">
                        <label for="icon_prefix">Email</label>
                    </div>
                    <div class="input-field col s12 col m4">
                        <i class="material-icons prefix">lock</i>
                        <input id="icon_prefix" type="password" asp-for="Password" class="validate">
                        <label for="icon_prefix">Password</label>
                    </div>
                </div>

                <div class="divider" style="background-color: #cecece;"></div>

                <div class="row">
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="Address">
                        <label for="icon_prefix">Address</label>
                    </div>
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="PostalCode">
                        <label for="icon_prefix">Postal Code</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="City">
                        <label for="icon_prefix">City</label>
                    </div>
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">place</i>
                        <input id="icon_prefix" type="text" asp-for="Country">
                        <label for="icon_prefix">Country</label>
                    </div>
                </div>

                <div class="divider" style="background-color: #cecece;"></div>

                <div class="row">
                    <div id="button-area">
                        <button id="create-admin-btn" type="submit" value="Create"
                                class="btn-large z-depth-3 waves-effect waves-light light-green">
                            <i class="material-icons left">create</i>
                            <span>Create</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="light-green-text text-darken-2">Back to Overview</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>