@model InvoiceWebApp.Models.User
@inject ApplicationDbContext _context
@using System.Diagnostics
@using InvoiceWebApp.Data

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

    AppSettings settings = null;
    if (SessionHelper.IsExists(Context.Session, "Settings")) {
        settings = SessionHelper.Get<AppSettings>(Context.Session, "Settings");
    }
    if (!SessionHelper.IsExists(Context.Session, "Settings")) {
        settings = _context.Settings.FirstOrDefault();
        SessionHelper.Set(Context.Session, "Settings", settings);
    }
}


<div>
    <div class="section">
        <h3 class="center-align" style="font-family:Roboto, sans-serif;">Sign In - Client</h3>
    </div>

    <div class="row grey lighten-3">
        <div class="col s12 col m12">
            <form id="login-form" asp-controller="Users" asp-action="Login">
                <!--Email-->
                <div class="row">
                    <div class="input-field col s12 col m12">
                        <input asp-for="Email" id="email" type="email" class="validate grey-text text-darken-3" style="max-width: 400px !important;">
                        <label class="grey-text text-darken-3" for="email">Email</label>
                    </div>
                </div>
                <!--Password-->
                <div class="row">
                    <div class="input-field col s12 col m12">
                        <input asp-for="Password" id="password" type="password" class="validate grey-text text-darken-3" style="max-width: 400px !important;">
                        <label class="grey-text text-darken-3" for="password">Password</label>
                    </div>
                </div>
                <!--Button-->
                <div class="row">
                    <button type="submit" class="btn z-depth-2 light-green darken-1 right white-text wave-effect wave-green">LOGIN</button>
                </div>
            </form>
        </div>
    </div>

    <br /> 

    <div class="divider">
    </div>

    <br />

    <div class="row right" style="margin-right: 100px;">
        <a asp-action="ForgotPassword" style="font-weight: bold;" class="light-green-text text-darken-1">Forgot Password?</a>
         | 
        <a asp-controller="Admins" asp-action="Login" style="font-weight: bold;" class="light-green-text text-darken-1">Admin Login</a>
    </div>

    <br />
    <br />
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
