@using System.Diagnostics
@using InvoiceWebApp.Data
@model InvoiceWebApp.Models.User
@inject ApplicationDbContext _context

@{
    ViewData["Title"] = "Manage User";
    Layout = "~/Views/Shared/_Layout.cshtml";

    AppSettings settings = null;
    if (SessionHelper.IsExists(Context.Session, "Settings")) {
        Debug.WriteLine("Settings exists");
        settings = SessionHelper.Get<AppSettings>(Context.Session, "Settings");
    }
    if (!SessionHelper.IsExists(Context.Session, "Settings")) {
        settings = _context.Settings.FirstOrDefault();
        SessionHelper.Set(Context.Session, "Settings", settings);
    }
}

<div class="container" id="edit-user">

    <div class="row">
        <div class="col s12 col m12 center-align">
            <h4 style="margin-top: 40px;">Manage User</h4>
        </div>
    </div>

    <br />

    <!--Form-->
    <div class="row" style="margin-top: 5px;">
        <div class="col s12 col col m10 offset-m1">
            <form asp-controller="Users" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserID" />

                <div class="row">
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">email</i>
                        <input id="icon_prefix" type="email" asp-for="Email" class="validate">
                        <label for="icon_prefix">Email</label>
                    </div>
                    <div class="input-field col s12 col m4">
                        <i class="material-icons prefix">lock</i>
                        <input id="icon_prefix" type="password" asp-for="Password" class="validate">
                        <label for="icon_prefix">Password</label>
                    </div>
                </div>

                <div class="divider" style="background-color: #cecece;"></div>

                <div class="row">
                    <div class="input-field col s12 col m4 offset-m2">
                        <i class="material-icons prefix">person_pin</i>
                        <input id="icon_prefix" type="text" asp-for="AccountType">
                        <label for="icon_prefix">Account Type</label>
                    </div>
                    <div class="input-field col s12 col m4 offset-m2">
                    </div>
                </div>

                <div class="divider" style="background-color: #cecece;"></div>

                <div class="row">
                    <div id="button-area">
                        <button id="edit-admin-btn" type="submit" value="Save"
                                class="btn-large z-depth-3 waves-effect waves-light light-green">
                            <i class="material-icons left">save</i>
                            <span>Save</span>
                        </button>

                        <br />

                        <a asp-action="Index" class="light-green-text text-darken-2">Back to Overview</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>